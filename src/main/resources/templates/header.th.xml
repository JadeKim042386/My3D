<?xml version="1.0" encoding="UTF-8"?>
<thlogic>
  <!--헤더-->
  <attr sel="header">
    <attr sel="#home" th:href="@{/}" th:method="get"/>
    <!--로그인-->
    <attr sel="#userAdminButton" sec:authorize="isAuthenticated()"/>
    <attr sel="#headerNickname"
          sec:authorize="isAuthenticated()"
          sec:authentication="principal.nickname"
    />
    <attr sel="#login"
          sec:authorize="!isAuthenticated()"
          th:href="@{/signin}"
          th:method="get"
    />
    <attr sel="#logout"
          sec:authorize="isAuthenticated()"
          th:action="@{/api/v1/signin/logout}"
          th:method="post"
    />
    <attr sel="#alarmButton" sec:authorize="isAuthenticated()"/>
    <!--유저 계정 관리 링크-->
    <attr sel="#adminCompany" sec:authorize="hasRole('ROLE_COMPANY')" th:href="@{/admin/company}"/>
    <attr sel="#adminAccount" th:href="@{/admin}"/>
    <attr sel="#adminPassword" th:href="@{/admin/password}"/>
  </attr>
  <attr sel="#alarm-script" sec:authorize="isAuthenticated()"/>
</thlogic>
