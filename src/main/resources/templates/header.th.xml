<?xml version="1.0" encoding="UTF-8"?>
<thlogic>
  <!--헤더-->
  <attr sel="header">
    <attr sel="#home" th:href="@{/}" th:method="get"/>
    <attr sel="#models" th:href="@{/model_articles}" th:method="get"/>
    <attr sel="#request-modeling" th:href="@{#}" th:method="get"/>
    <!--로그인-->
    <attr sel="#nickname"
          sec:authorize="isAuthenticated()"
          sec:authentication="principal.nickname"
    />
    <attr sel="#login"
          sec:authorize="!isAuthenticated()"
          th:href="@{/account/login}"
          th:method="get"
    />
    <attr sel="#logout"
          sec:authorize="isAuthenticated()"
          th:href="@{/account/logout}"
    />
  </attr>
</thlogic>
