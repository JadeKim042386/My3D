<?xml version="1.0" encoding="UTF-8"?>
<thlogic>
    <attr sel="#header" th:replace="header :: header"></attr>
    <attr sel="#footer" th:replace="footer :: footer"></attr>
    <attr sel="#userType" sec:authorize="hasRole('ROLE_USER')"/>
    <attr sel="#companyType" sec:authorize="hasRole('ROLE_COMPANY')"/>
    <attr sel="#nav-company" sec:authorize="hasRole('ROLE_COMPANY')"/>
    <attr sel="#orders-form" sec:authorize="hasRole('ROLE_COMPANY')" th:action="@{/user/company}" th:method="post"/>
    <attr sel="#ordersTable/tbody">
        <attr sel="/tr[0]" th:if="${orders}" th:each="order : ${orders}">
            <attr sel="td.orderNo" th:text="${order.id}"/>
            <attr sel="td.productName" th:text="${order.productName}"/>
            <attr sel="td.address" th:text="${order.street} + ' ' + ${order.detail}"/>
            <attr sel="td.userStatus" sec:authorize="hasRole('ROLE_USER')" th:text="${order.status.name}"/>
            <attr sel="td.companyStatus" sec:authorize="hasRole('ROLE_COMPANY')">
                <attr sel="/select">
                    <attr sel="option[0]" th:text="REQUEST" th:selected="${order.status.name} == 'REQUEST'"/>
                    <attr sel="option[1]" th:text="EXAMINE" th:selected="${order.status.name} == 'EXAMINE'"/>
                    <attr sel="option[2]" th:text="PRINTING" th:selected="${order.status.name} == 'PRINTING'"/>
                    <attr sel="option[3]" th:text="DELIVERY" th:selected="${order.status.name} == 'DELIVERY'"/>
                </attr>
            </attr>
        </attr>
    </attr>
</thlogic>
